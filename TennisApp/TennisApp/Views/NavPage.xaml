<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="TennisApp.Views.NavPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="White">
            <StackLayout VerticalOptions="CenterAndExpand" WidthRequest="50">
                <Button WidthRequest="54" Text="Toernooi" BackgroundColor="lightGreen" BorderColor="LightGreen" TextColor="Black" BorderWidth="2" Command="{Binding ToernooiPageCommand}"/>
                <Button WidthRequest="54" Text="Spelers" BackgroundColor="LightGreen" BorderColor="LightGreen" TextColor="Black" BorderWidth="2" Command="{Binding SpelersLijstPageCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>